<h2>User info</h2>
  <%= image_tag user.get_profile_image(80,80) %>
  <table class="table">
    <tbody>
     <tr>
      <th>name</th>
      <th><%= user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
     </tr>
    </tbody>
  </table>
  <% if user.name != "guestuser" %>
  <div class="row">
   <%= link_to edit_user_path(user),class:"btn btn-outline-secondary btn-block" do %>
   <i class="fas fa-user-cog"></i>
   <% end %>
  </div>
  <% end %>