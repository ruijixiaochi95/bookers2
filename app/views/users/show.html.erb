<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
    <%= render 'list',user: @user %>
    <%= render'books/new',book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse ">
      <thead>
       <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <% @books.each do |book| %>
        <td>
          <%= image_tag @user.get_profile_image(80,80) %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
        </tr>
        <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>
